<div class="row">
    <div class="col-12">
        <!-- Hero Section -->
        <div class="hero-section text-white text-center">
            <div class="hero-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <h1 class="hero-title">
                Hệ thống quản lý khóa học
            </h1>
            <p class="hero-subtitle">
                Quản lý khóa học một cách chuyên nghiệp và hiệu quả
            </p>
            <div class="hero-buttons">
                <a href="/courses" class="hero-btn hero-btn-primary" onclick="console.log('Click Xem khóa học')">
                    <i class="fas fa-book"></i>Xem khóa học
                </a>
                <a href="/courses/create" class="hero-btn hero-btn-secondary" onclick="console.log('Click Tạo khóa học')">
                    <i class="fas fa-plus"></i>Tạo khóa học
                </a>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-section">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="stats-card primary">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon me-3">
                                <i class="fas fa-book"></i>
                            </div>
                            <div>
                                <div class="stats-number">{{totalCourses}}</div>
                                <div class="stats-label">Tổng khóa học</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stats-card success">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon me-3">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div>
                                <div class="stats-number">{{totalCourses}}</div>
                                <div class="stats-label">Đang hoạt động</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stats-card warning">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon me-3">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <div class="stats-number">{{uniqueInstructors.length}}</div>
                                <div class="stats-label">Giảng viên</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stats-card info">
                        <div class="d-flex align-items-center">
                            <div class="stats-icon me-3">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div>
                                <div class="stats-number">{{uniqueCategories.length}}</div>
                                <div class="stats-label">Danh mục</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Courses -->
        <div class="recent-courses-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-clock"></i>Khóa học gần đây
                </h3>
                <a href="/courses" class="view-all-btn">
                    Xem tất cả<i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            {{#if courses.length}}
                <div class="row">
                    {{#each courses}}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="course-card">
                                <div class="course-card-image">
                                    {{#if image}}
                                        <img src="{{image}}" alt="{{name}}" class="course-image">
                                    {{else}}
                                        <div class="course-image-placeholder {{#if (eq category 'programming')}}bg-primary{{else if (eq category 'design')}}bg-warning{{else if (eq category 'business')}}bg-info{{else}}bg-secondary{{/if}}">
                                            <i class="fas fa-book"></i>
                                        </div>
                                    {{/if}}
                                    <div class="course-category-badge">
                                        {{#if (eq category 'programming')}}
                                            <i class="fas fa-code"></i> Lập trình
                                        {{else if (eq category 'design')}}
                                            <i class="fas fa-palette"></i> Thiết kế
                                        {{else if (eq category 'business')}}
                                            <i class="fas fa-briefcase"></i> Kinh doanh
                                        {{else if (eq category 'marketing')}}
                                            <i class="fas fa-bullhorn"></i> Marketing
                                        {{else}}
                                            <i class="fas fa-book"></i> Khác
                                        {{/if}}
                                    </div>
                                </div>
                                <div class="course-card-body">
                                    <h5 class="course-title">{{name}}</h5>
                                    {{#if description}}
                                        <p class="course-description">{{description}}</p>
                                    {{/if}}
                                    <div class="course-meta">
                                        {{#if instructor}}
                                            <div class="course-instructor">
                                                <i class="fas fa-user"></i> {{instructor}}
                                            </div>
                                        {{/if}}
                                        {{#if duration}}
                                            <div class="course-duration">
                                                <i class="fas fa-clock"></i> {{duration}} giờ
                                            </div>
                                        {{/if}}
                                        {{#if level}}
                                            <div class="course-level">
                                                <i class="fas fa-signal"></i> 
                                                {{#if (eq level 'beginner')}}Cơ bản
                                                {{else if (eq level 'intermediate')}}Trung cấp
                                                {{else}}Nâng cao{{/if}}
                                            </div>
                                        {{/if}}
                                    </div>
                                    <div class="course-actions">
                                        <a href="/courses/{{_id}}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Xem chi tiết
                                        </a>
                                        {{#if price}}
                                            <span class="course-price">{{price}} VNĐ</span>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <div class="text-center py-5">
                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Chưa có khóa học nào</h4>
                    <p class="text-muted">Hãy tạo khóa học đầu tiên của bạn!</p>
                    <a href="/courses/create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Tạo khóa học
                    </a>
                </div>
            {{/if}}
        </div>
    </div>
</div>

<!-- JavaScript để debug và đảm bảo các nút hoạt động -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Home page loaded');
    
    // Lấy các nút hero
    const viewCoursesBtn = document.querySelector('.hero-btn-primary');
    const createCourseBtn = document.querySelector('.hero-btn-secondary');
    
    if (viewCoursesBtn) {
        console.log('Nút Xem khóa học found:', viewCoursesBtn);
        viewCoursesBtn.addEventListener('click', function(e) {
            console.log('Clicking Xem khóa học, href:', this.href);
        });
    } else {
        console.error('Không tìm thấy nút Xem khóa học');
    }
    
    if (createCourseBtn) {
        console.log('Nút Tạo khóa học found:', createCourseBtn);
        createCourseBtn.addEventListener('click', function(e) {
            console.log('Clicking Tạo khóa học, href:', this.href);
        });
    } else {
        console.error('Không tìm thấy nút Tạo khóa học');
    }
    
    // Kiểm tra tất cả các link trong hero section
    const heroLinks = document.querySelectorAll('.hero-section a');
    console.log('Tổng số link trong hero section:', heroLinks.length);
    heroLinks.forEach((link, index) => {
        console.log(`Link ${index + 1}:`, link.href, link.textContent.trim());
    });
});
</script>