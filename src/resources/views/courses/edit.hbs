<!-- JavaScript ƒë·ªÉ x·ª≠ l√Ω logic h√¨nh ·∫£nh v√† ƒë·ªãnh d·∫°ng -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const imageFile = document.getElementById('imageFile');
    const imageUrl = document.getElementById('imageUrl');
    const priceInput = document.getElementById('price');
    const durationInput = document.getElementById('duration');
    
    // X·ª≠ l√Ω ƒë·ªãnh d·∫°ng ti·ªÅn t·ªá
    function formatCurrency(value) {
        // Lo·∫°i b·ªè t·∫•t c·∫£ k√Ω t·ª± kh√¥ng ph·∫£i s·ªë
        const numericValue = value.replace(/[^\d]/g, '');
        if (numericValue === '') return '';
        
        // Chuy·ªÉn ƒë·ªïi th√†nh s·ªë v√† ƒë·ªãnh d·∫°ng v·ªõi d·∫•u ph·∫©y
        const number = parseInt(numericValue);
        return number.toLocaleString('vi-VN');
    }
    
    function parseCurrency(value) {
        // Lo·∫°i b·ªè d·∫•u ph·∫©y v√† chuy·ªÉn v·ªÅ s·ªë
        return parseInt(value.replace(/[^\d]/g, '')) || 0;
    }
    
    // X·ª≠ l√Ω khi nh·∫≠p gi√° ti·ªÅn
    priceInput.addEventListener('input', function() {
        const cursorPosition = this.selectionStart;
        const oldValue = this.value;
        const newValue = formatCurrency(this.value);
        
        if (newValue !== oldValue) {
            this.value = newValue;
            
            // Gi·ªØ v·ªã tr√≠ con tr·ªè
            const newCursorPosition = cursorPosition + (newValue.length - oldValue.length);
            this.setSelectionRange(newCursorPosition, newCursorPosition);
        }
    });
    
    // X·ª≠ l√Ω khi focus v√†o √¥ gi√° ti·ªÅn
    priceInput.addEventListener('focus', function() {
        // Ch·ªçn to√†n b·ªô text khi focus
        this.select();
    });
    
    // X·ª≠ l√Ω khi submit form
    const form = document.getElementById('editCourseForm');
    form.addEventListener('submit', function(e) {
        console.log(' Form submitting...');
        
        // Ki·ªÉm tra h√¨nh ·∫£nh
        const hasFile = imageFile.files.length > 0;
        const hasUrl = imageUrl.value.trim() !== '';
        
        if (hasFile && hasUrl) {
            e.preventDefault();
            alert('Vui l√≤ng ch·ªâ ch·ªçn m·ªôt c√°ch: ho·∫∑c ch·ªçn file, ho·∫∑c nh·∫≠p link URL!');
            return false;
        }
        
        // C·∫≠p nh·∫≠t gi√° ti·ªÅn tr∆∞·ªõc khi submit
        const currentPrice = parseCurrency(priceInput.value);
        
        // C·∫≠p nh·∫≠t gi√° tr·ªã c·ªßa input thay v√¨ t·∫°o input m·ªõi
        priceInput.value = currentPrice;
        
        console.log('üì§ Form data being sent:', {
            name: document.getElementById('name').value,
            description: document.getElementById('description').value,
            price: currentPrice,
            duration: durationInput.value,
            category: document.getElementById('category').value,
            level: document.getElementById('level').value,
            instructor: document.getElementById('instructor').value,
            hasFile: hasFile,
            hasUrl: hasUrl
        });
        
        // Kh√¥ng c·∫ßn preventDefault, ƒë·ªÉ form submit b√¨nh th∆∞·ªùng
    });
    
    // X·ª≠ l√Ω h√¨nh ·∫£nh
    imageFile.addEventListener('change', function() {
        if (this.files.length > 0) {
            imageUrl.value = '';
        }
    });
    
    imageUrl.addEventListener('input', function() {
        if (this.value.trim() !== '') {
            imageFile.value = '';
        }
    });
    
    // Kh·ªüi t·∫°o gi√° tr·ªã ban ƒë·∫ßu cho gi√° ti·ªÅn
    if (priceInput.value) {
        priceInput.value = formatCurrency(priceInput.value);
    }
    
    // Auto-hide success message sau 5 gi√¢y
    const successAlert = document.querySelector('.alert-success');
    if (successAlert) {
        setTimeout(() => {
            successAlert.classList.remove('show');
            setTimeout(() => {
                successAlert.remove();
            }, 150);
        }, 5000);
    }
    
    console.log('‚úÖ Edit form JavaScript loaded successfully');
});
</script>
