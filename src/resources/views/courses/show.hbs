<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <img src="{{course.image}}" class="card-img-top" alt="{{course.name}}" 
                 style="height: 300px; object-fit: cover;">
            <div class="card-body">
                <h2 class="card-title">{{course.name}}</h2>
                <p class="card-text text-muted">{{course.description}}</p>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-tags text-primary me-2"></i>
                            <span class="badge bg-primary">{{course.category}}</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-signal text-warning me-2"></i>
                            <span class="badge bg-warning text-dark">{{course.level}}</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-clock text-info me-2"></i>
                            <span>{{course.duration}} giờ</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-money-bill text-success me-2"></i>
                            <span class="fw-bold text-success">{{course.price}} VNĐ</span>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-user text-secondary me-2"></i>
                    <span>Giảng viên: {{course.instructor}}</span>
                </div>
                
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-calendar text-secondary me-2"></i>
                    <span>Ngày tạo: {{formatDate course.createdAt}}</span>
                </div>
                
                <div class="d-flex gap-2">
                    <a href="/courses/{{course._id}}/edit" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Chỉnh sửa
                    </a>
                    <a href="/courses" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Thông tin khóa học
                </h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-book text-primary me-2"></i>
                        <strong>Tên:</strong> {{course.name}}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-tags text-primary me-2"></i>
                        <strong>Danh mục:</strong> {{course.category}}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-signal text-primary me-2"></i>
                        <strong>Cấp độ:</strong> {{course.level}}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-clock text-primary me-2"></i>
                        <strong>Thời lượng:</strong> {{course.duration}} giờ
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-money-bill text-primary me-2"></i>
                        <strong>Giá:</strong> {{course.price}} VNĐ
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-user text-primary me-2"></i>
                        <strong>Giảng viên:</strong> {{course.instructor}}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-calendar text-primary me-2"></i>
                        <strong>Ngày tạo:</strong> {{formatDate course.createdAt}}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-calendar-alt text-primary me-2"></i>
                        <strong>Cập nhật:</strong> {{formatDate course.updatedAt}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
